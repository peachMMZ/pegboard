{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pegboard",
  "version": "0.1.1",
  "identifier": "pegboard",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pegboard",
        "width": 1000,
        "height": 600,
        "visible": false,
        "resizable": false,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFGQTg2NUMzMjhCNkVDRjMKUldUejdMWW93MldvSDN2a0NHUGNEYWpmMjd6ZG5KdDBBQmNvNGRxTERJWW5QTFFISm14N0F2T2cK",
      "endpoints": [
        "https://github.com/peachMMZ/pegboard/releases/latest/download/latest.json"
      ]
    }
  }
}
